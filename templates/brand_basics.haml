	%head
		= haml :head, :locals => { :brand => (brand rescue "") }
		:css
			html, body, .content { background-color: #111; }

	%body
		= haml "#{brand}_header".to_sym
						
		.container-fluid.content
			.row-fluid
				#content.span9.left_content
					= haml :basics, :locals => { :models => models, :brand => brand, :subfolder => subfolder }

				#sidebar.span3.center
					= haml "#{brand}_sidebar".to_sym
					

		/ Modal
		#fbinc.modal.hide.fade{ tabindex: "-1", role: "dialog",  :"aria-labelledby"=>"myModalLabelFBInc", :"aria-hidden"=>"true" }
			.modal-header
				%button.close{ type: "button", :"data-dismiss"=>"modal", :"aria-hidden"=>"true" } Ã—
				%h3#myModalLabelFBInc FBInc 

			.modal-body
				= haml "#{brand}_footer".to_sym						
				= haml :fbi_footer

			.modal-footer
				%button.btn{ :"data-dismiss"=>"modal", :"aria-hidden"=>"true" } Close

		#musterbox.modal.hide.fade{ style: "max-width: 768px; z-index: 9999;background-color: #fff"}
			.modal-header
				%button{ type: "button", class: "close", :"data-dismiss"=>"modal", :"aria-hidden"=>"true"} &times;
				%h3 Modal header
			.modal-body
			.modal-footer
				%a{ href:"#", class:"btn"} Close


	= javascript_tags

	:javascript
		
		$( function(){
			$('.carousel').carousel({ interval: false })
			$('.modal-footer a').on( 'click', function(e){ 
				$('.modal-body').html(''); 
				$('#musterbox').modal('hide'); 
				e.preventDefault() 
			})

			$('#fbinc_link').on( 'click', function(e){
				$( $(this).data('url') ).modal('show');
				e.preventDefault();
			})

		})
	